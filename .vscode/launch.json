{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üê∂ CLI: say",
            "type": "debugpy",
            "request": "launch",
            "module": "dcs.cli",
            "args": [
                "dcs",
                "say",
                "meeeh"
            ],
            "justMyCode": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "üöÄ API: Run FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.api.app:app",
                "--reload"
            ],
            "justMyCode": true,
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}
